[
  // multi cursor
  {
    "key": "shift+alt+j",
    "command": "editor.action.insertCursorBelow",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+alt+k",
    "command": "editor.action.insertCursorAbove",
    "when": "editorTextFocus"
  },
  // move active window
  {
    "key": "ctrl+oem_1",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+oem_1",
    "command": "workbench.action.focusNextGroup",
    "when": "!terminalFocus"
  },
  // open and focus terminal
  {
    "key": "ctrl+oem_7",
    "command": "terminal.focus"
  },
  // close terminal and focus active editor
  {
    "key": "ctrl+n",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "ctrl+j",
    "command": "-workbench.action.togglePanel"
  },
  // open new window
  {
    "key": "ctrl+t",
    "command": "workbench.action.newGroupRight",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+t",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
  },
  // go to next error
  {
    "key": "ctrl+k e",
    "command": "editor.action.marker.next",
    "when": "editorFocus"
  },
  // open terminal in active file
  {
    "key": "ctrl+k t",
    "command": "workbench.action.tasks.runTask",
    "args": "open terminal with active file's parent directory",
    "when": "!taskRunning"
  },
  {
    "key": "ctrl+k t",
    "command": "workbench.action.tasks.restartTask",
    "args": "open terminal with active file's parent directory",
    "when": "taskRunning"
  },
  // change active tab
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.quickOpenNavigatePreviousInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen && !terminalFocus"
  },
  {
    "key": "ctrl+tab",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
  },
  {
    "key": "ctrl+tab",
    "command": "workbench.action.quickOpenNavigateNextInEditorPicker",
    "when": "!terminalFocus && inEditorsPicker && inQuickOpen"
  },
  //  open active file in explorer
  {
    "key": "ctrl+shift+e",
    "command": "workbench.files.action.showActiveFileInExplorer"
  },
  {
    "key": "ctrl+shift+e",
    "command": "-workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  // open source control
  {
    "key": "ctrl+shift+g",
    "command": "workbench.scm.focus"
  },
  // toggle sidebar
  {
    "key": "ctrl+h",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  // copy relative path
  {
    "key": "ctrl+k r",
    "command": "copyRelativeFilePath"
  },
  // enable ctrl + p when vim is active
  {
    "key": "ctrl+p",
    "command": "-extension.vim_ctrl+p",
    "when": "editorTextFocus && vim.active && vim.use<C-p> && !inDebugRepl || vim.active && vim.use<C-p> && !inDebugRepl && vim.mode == 'CommandlineInProgress' || vim.active && vim.use<C-p> && !inDebugRepl && vim.mode == 'SearchInProgressMode'"
  },
  {
    "key": "ctrl+k e",
    "command": "workbench.files.action.focusFilesExplorer"
  },
  {
    "key": "ctrl+k i",
    "command": "claude-code.insertAtMentioned",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+k",
    "command": "-claude-code.insertAtMentioned",
    "when": "editorTextFocus"
  }
]
