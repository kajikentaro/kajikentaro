  // terminalの便利なキーバインドを復活
  {
    "key": "alt+right",
    "command": "-workbench.action.terminal.focusNextPane"
  },
  {
    "key": "alt+left",
    "command": "-workbench.action.terminal.focusPreviousPane"
  },
  {
    "key": "ctrl+e",
    "command": "+workbench.action.quickOpen"
  },
  // move source control
  {
    "key": "ctrl+shift+G",
    "command": "list.focusDown",
    "when": "listFocus"
  },
  {
    "key": "ctrl+G",
    "command": "list.focusUp",
    "when": "listFocus"
  },
  // move exploler
  {
    "key": "ctrl+shift+E",
    "command": "list.focusDown",
    "when": "listFocus"
  },
  {
    "key": "ctrl+E",
    "command": "list.focusUp",
    "when": "listFocus"
  }
